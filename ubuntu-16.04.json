{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "Ubuntu_64",
    "iso_url": "{{user `mirror`}}/16.04/ubuntu-16.04.2-server-amd64.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-ubuntu-16.04-amd64-{{build_type}}",
    "vm_name": "ubuntu-16.04-amd64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<enter><wait>",
      "<f6><esc>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs>",
      "/install/vmlinuz ",
      "initrd=/install/initrd.gz ",
      "net.ifnames=0 ",
      "auto-install/enable=true ",
      "debconf/priority=critical ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "script": "scripts/vagrant-setup.sh"
  }, {
    "type": "shell",
    "environment_vars": [
      "ANSIBLE_STAGING_DIRECTORY={{user `ansible_staging_directory`}}",
      "ANSIBLE_STAGING_DIRECTORY_USER=vagrant",
      "ANSIBLE_STAGING_DIRECTORY_GROUP=vagrant",
      "ANSIBLE_STAGING_DIRECTORY_PERMISSIONS=775"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "scripts/vbox-setup.sh",
      "scripts/ansible-setup.sh"
    ]
  }, {
    "type": "file",
    "source": "ansible/",
    "destination": "{{user `ansible_staging_directory`}}"
  }, {
    "type": "ansible-local",
    "staging_directory": "{{user `ansible_staging_directory`}}",
    "playbook_file": "ansible/playbook.yml",
    "galaxy_file": "ansible/requirements.yml",
    "extra_arguments": ["--verbose --extra-vars \"playbook_directory={{user `ansible_staging_directory`}} \""]
  }, {
    "type": "shell",
    "environment_vars": [
      "ANSIBLE_STAGING_DIRECTORY={{user `ansible_staging_directory`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "scripts/ansible-cleanup.sh",
      "scripts/vagrant-cleanup.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "builds/ubuntu-16.04-amd64-{{.Provider}}.box"
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "true",
    "iso_checksum": "737ae7041212c628de5751d15c3016058b0e833fdc32e7420209b76ca3d0a535",
    "iso_checksum_type": "sha256",
    "memory": "512",
    "mirror": "http://mirror.csclub.uwaterloo.ca/ubuntu-releases",
    "ssh_timeout": "60m",
    "ansible_staging_directory": "/tmp/ansible"
  }
}

